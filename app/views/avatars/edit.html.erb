<%= simple_form_for(@avatar) do |f| %>
  <%= f.input :gender,
  collection: Avatar::GENDER_CHOICE,
  label_method: :last,
  value_method: :first %>
  <%= f.input :hair, collection: Avatar::HAIR_CHOICE,
  label_method: :last,
  value_method: :first %>
  <%= f.input :top, collection: Avatar::TOP_CHOICE,
  label_method: :last,
  value_method: :first %>
  <%= f.input :bottom, collection: Avatar::BOTTOM_CHOICE,
  label_method: :last,
  value_method: :first %>
  <%= f.input :shoes, collection: Avatar::SHOE_CHOICE,
  label_method: :last,
  value_method: :first %>
  <%= f.submit %>
<% end %>
