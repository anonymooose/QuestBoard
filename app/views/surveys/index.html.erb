<div class="page-wrapper">
  <div class="container survey-index">
    <div class="ribbon-wrapper">
      <div class="main-heading-group mrg-bottom">
        <h1>Quest Followups</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <p>Please click on a card to follow up on your recently attended event.</p>
      </div>
      <% if !@surveys.blank? %>
          <% for survey in @surveys.where(attended:false) %>
          <div class="col-sm-4">
            <div class="card card-padding">
              <% event = survey.event %>
                <p><%= link_to "#{event.title}", event_survey_path(event, survey) %></p>
                <p><time class="date" datetime="<%= event.datetime %>"></time> at <time class="time" datetime="<%= event.datetime %>"></time></p>
                "<%= event.game.name %>"
                hosted by: <%= event.host.user.username %>
            </div>
            </div>
          <% end %>
      <% else %>
        <p>You haven't attended any events yet! Go find some!</p>
      <% end %>
    </div>
  </div>
</div>





